// This is a config file for scouter mysql/mariadb agent.
{ 
    "configurations": {
        "scouter.server": "127.0.0.1",
        "scouter.server.udp.port": "6100",
        "scouter.server.tcp.port": "6100",
        "instances": [
            {
                "db.server": "db addr",
                "db.port": "3306",
                "db.user": "user_name",
                "db.password": "user_password",
                "db.slowquery.path": "/path/to/slow_query"
            },
            {
                "db.server": "db addr",
                "db.port": "3308",
                "db.user": "user_name",
                "db.password": "user_password",
                "db.slowquery.path": "/path/to/slow_query"
            }
        ]
    }
}
